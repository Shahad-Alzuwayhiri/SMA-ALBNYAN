# Contract Sama - Render.com Configuration

# Environment
APP_NAME="Contract Sama"
APP_ENV=production
APP_DEBUG=false
APP_URL=${RENDER_EXTERNAL_URL}

# Database (SQLite for simplicity on Render)
DB_CONNECTION=sqlite
DB_DATABASE=database/contracts.db

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Security
APP_KEY=base64:$(openssl rand -base64 32)

# Render specific
RENDER=true
PORT=${PORT}

# PDF Settings
PDF_MEMORY_LIMIT=256M
PDF_MAX_EXECUTION_TIME=300

# File uploads
UPLOAD_MAX_SIZE=10M
MAX_FILE_UPLOADS=20

# Timezone
APP_TIMEZONE=Asia/Riyadh

# Logging
LOG_CHANNEL=stderr
LOG_LEVEL=error