{
    "name": "contract-sama/app",
    "description": "Contract Management System - Pure PHP Application",
    "type": "project",
    "license": "MIT",
    "keywords": ["contract", "management", "php", "pdf", "arabic"],
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-gd": "*",
        "ext-zip": "*",
        "tecnickcom/tcpdf": "^6.6"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Models\\": "models/",
            "Services\\": "services/",
            "Controllers\\": "controllers/"
        },
        "files": [
            "config/helpers.php",
            "includes/helpers.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php setup_database.php"
        ],
        "deploy": [
            "composer install --no-dev --optimize-autoloader",
            "php upgrade_system.php"
        ],
        "test": [
            "php test_simple.php",
            "php system_test.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        }
    },
    "extra": {
        "production": {
            "exclude-files": [
                "test_*.php",
                "setup_*.php",
                "check_*.php",
                "fix_*.php"
            ]
        }
    }
}
